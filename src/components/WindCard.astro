---
interface Props{
    weatherData: any
}
const {weatherData} = Astro.props
---

<script is:inline src="https://fastly.jsdelivr.net/npm/echarts@5/dist/echarts.min.js"></script>

<div class="wind-card">
    <p style="color: #A7A7A7">Vývoj větru</p>
    <div class="WindChart" id="Windchart">
    <div>
    <p>{weatherData.windSpeed} km/h</p>
</div>

<script define:vars={{ WindValues: weatherData.windSpeed}}>
    (() => {
        var WindChart = echarts.init(document.getElementById('Windchart'), {
            renderer: 'svg',
            useDirtyRect: false
        });

        var Windconfig = {
            xAxis: {
                show: false,
                type: 'category',
            },
            yAxis: {
                show: false
            },
            series: [{
                data: [20, 50, 30, 40, 60, 80, 120, 150, 110, 90, 60, 70, 50, 40, 30, 20, 40, 10],
                itemStyle: {
                    borderRadius: 100,
                    barCategoryGap: '2',
                    barMaxWidth: 1
                },
                type: 'bar'
            }]
        };

        WindChart.setOption(Windconfig);
    })();
</script>

<style>
    .wind-card{
        background-color: #1b1a1d;
        padding: 0 2vw 0 2vw;
        margin-top: 0vw;
        border-radius: 1.5vw;
        font-size: 1.3vw;
    }
    .WindChart{
        height: 250px;
        width: 300px;
        margin-bottom: 0;
    }
</style>