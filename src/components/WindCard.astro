---
interface Props{
    weatherData: any
}
const {weatherData} = Astro.props
---

<div class="wind-card">
    <p style="color: #A7A7A7">Vývoj větru</p>
    <div class="WindChart">
    <div>
    <p>{weatherData.windSpeed} km/h</p>
</div>

<style>
    .wind-card{
        background-color: #1b1a1d;
        padding: 0 2rem 0 2rem;
        margin-top: 0rem;
        border-radius: 1.5rem;
        font-size: 1.3rem;
    }
    .WindChart{
        height: 10rem;
        margin-bottom: 0;
    }
</style>